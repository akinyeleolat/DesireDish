<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".FollowFriendActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
 <!--   android:background="@drawable/background2"
       android:id="@+id/background"-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">


            <LinearLayout
                android:id="@+id/username_login_form"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <AutoCompleteTextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DesireDish Username"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColorHint="#ff606060"
                    android:textIsSelectable="false" />
                <TextView
                    android:id="@+id/userid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Desiredish ID:"
                    android:layout_marginLeft="13dp"
                    />
                <Button
                    android:id="@+id/account_follow_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Follow Friend"
                    android:textStyle="bold"
                    android:background="#A4C639"
                    android:textColor="#ffffffff" />
                <TableLayout
                    android:id="@+id/tableLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="15dp">
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/display_row1">
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TableRow>


                </TableLayout>
            </LinearLayout>

    </ScrollView>

</LinearLayout>



